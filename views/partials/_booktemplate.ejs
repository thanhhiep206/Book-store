<tr>
  <form method="post" action="/api/v1/books/<%=book.id +"?_method=PATCH"%>" >
    <td>
      <div class="d-flex px-2 py-1">
        <div>
          <img src="/images/<%=book.img%>" class="avatar avatar-sm me-3" alt="<%=book.name%>">
        </div>
        <input class="d-flex flex-column justify-content-center form-control" value="<%=book.name%>" name="name">
      </div>
    </td>
    <td>
      <input class="form-control" type="text" value="<%=book.author%>" size="10" name="author">  
    </td>
    <td class="align-middle text-center text-sm">
      <input class="form-control" type="text" value="<%=book.price%>" size="4" name="price">
    </td>
    <td class="align-middle text-center">
      <input class="form-control" type="text" value="<%=book.percentSale%>" size="4" name="percentSale">
    </td>
    <td class="align-middle text-center">
      <input class="form-control" type="text" value="<%=book.cartgory%>" size="7" name="cartgory"> 
      </td>
    <td class="align-middle">
      <div class="ms-auto text-end">
        <a class="btn btn-link text-danger text-gradient px-3 mb-0"id="deletebtn"  data-model="books" data-item-id="<%=book.id%>"><i class="far fa-trash-alt me-2"></i>Delete</a>
        <button type="submit"  class="btn btn-link text-dark px-3 mb-0" ><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true" ></i>Update</button>
      </div> 
    </td>
  </form>
 
  </tr>